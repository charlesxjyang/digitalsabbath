{
  "manifest_version": 3,
  "name": "Digital Sabbath",
  "version": "1.0.0",
  "description": "The longest day, spent offline. Blocks social media and gambling sites on the summer solstice.",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "sabbath_rules",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
